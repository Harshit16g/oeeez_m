# Supabase Configuration
# Get these from your Supabase project settings at https://supabase.com/dashboard/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Optional: Google Analytics
# GOOGLE_SITE_VERIFICATION=your-verification-code

# ============================================================================
# Redis / Upstash (Primary Caching Layer - Phase 2)
# ============================================================================
# Main Redis URL for ioredis client
REDIS_URL=redis://localhost:6379

# Upstash KV REST API endpoints (production)
KV_URL=
KV_REST_API_URL=
KV_REST_API_TOKEN=
KV_REST_API_READ_ONLY_TOKEN=

# Redis SCAN batch size (default: 100)
# Controls how many keys are processed per iteration in cache invalidation
REDIS_SCAN_BATCH_SIZE=100

# ============================================================================
# Neon Postgres (Testing & Phase 3 Preparation)
# ============================================================================
# Primary database connection URLs
DATABASE_URL=
DATABASE_URL_UNPOOLED=

# Standard Postgres connection parameters
PGHOST=
PGHOST_UNPOOLED=
PGUSER=
PGDATABASE=
PGPASSWORD=

# Neon-specific connection URLs
POSTGRES_URL=
POSTGRES_URL_NON_POOLING=
POSTGRES_USER=
POSTGRES_HOST=
POSTGRES_PASSWORD=
POSTGRES_DATABASE=
POSTGRES_URL_NO_SSL=
POSTGRES_PRISMA_URL=

# ============================================================================
# Neon Auth (Next.js Integration)
# ============================================================================
NEXT_PUBLIC_STACK_PROJECT_ID=
NEXT_PUBLIC_STACK_PUBLISHABLE_CLIENT_KEY=
STACK_SECRET_SERVER_KEY=

# ============================================================================
# X.AI / Grok (AI Assistant - Phase 3+)
# ============================================================================
# Always configured to use Grok 3 Mini model
XAI_API_KEY=

# ============================================================================
# Mux (Video & Audio Delivery - Phase 3)
# ============================================================================
# For media streaming and provider portfolio showcases
MUX_TOKEN_ID=
MUX_TOKEN_SECRET=

# ============================================================================
# Inngest (AI Workflow Events - Phase 3+)
# ============================================================================
# Powers asynchronous background jobs and event triggers
INNGEST_EVENT_KEY=
INNGEST_SIGNING_KEY=
